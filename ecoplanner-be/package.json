{
    "name": "ecoplanner-be",
    "version": "1.0.0",
    "description": "Eco-Planner Backend API with AI Chat",
    "main": "dist/index.js",
    "scripts": {
        "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
        "build": "tsc && tsc -p tsconfig.seed.json",
        "start": "node --max-old-space-size=450 dist/index.js",
        "db:generate": "prisma generate",
        "db:migrate": "prisma migrate dev",
        "db:push": "prisma db push",
        "db:seed": "node dist/prisma/seed.js",
        "test": "jest --coverage",
        "test:watch": "jest --watch"
    },
    "dependencies": {
        "@huggingface/inference": "^4.13.9",
        "@prisma/client": "^5.8.0",
        "bcryptjs": "^2.4.3",
        "cloudinary": "^1.41.3",
        "cors": "^2.8.5",
        "crypto-js": "^4.2.0",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-rate-limit": "^7.1.5",
        "helmet": "^7.1.0",
        "jsonwebtoken": "^9.0.2",
        "multer": "^2.0.2",
        "multer-storage-cloudinary": "^4.0.0",
        "socket.io": "^4.7.4",
        "vnpay": "^2.4.4",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.11",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/multer": "^2.0.0",
        "@types/node": "^20.10.6",
        "@types/supertest": "^6.0.3",
        "jest": "^29.7.0",
        "nock": "^13.4.0",
        "prisma": "^5.8.0",
        "socket.io-client": "^4.7.4",
        "supertest": "^6.3.4",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.3.3"
    },
    "prisma": {
        "seed": "node dist/prisma/seed.js"
    }
}
